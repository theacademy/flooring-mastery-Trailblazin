<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="io" class="com.sg.floormaster.ui.UserIOConsoleImpl"/>

    <bean id="dao" class="com.sg.floormaster.dao.BookDaoMemoryImpl"/>


    <bean id="view" class="com.sg.floormaster.ui.OrderView">
        <constructor-arg ref="io"/>
    </bean>

    <bean id="service" class="com.sg.floormaster.service.OrderService">
        <constructor-arg ref="dao"/>
    </bean>

    <bean id="controller" class="com.sg.floormaster.controller.OrderController">
        <constructor-arg ref="service"/>
        <constructor-arg ref="view"/>
    </bean>


</beans>

